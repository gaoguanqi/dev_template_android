<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CommonDialogBottomAnim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="common_style_line">
        <item name="android:layout_height">@dimen/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_line</item>
    </style>

    <style name="common_xupdate_progressbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="xnpb_max">100</item>
        <item name="xnpb_current">0</item>
        <item name="xnpb_unreached_color">#CCCCCC</item>
        <item name="xnpb_reached_color">#e94339</item>
        <item name="xnpb_text_size">12sp</item>
        <item name="xnpb_text_color">#e94339</item>
        <item name="xnpb_reached_bar_height">4dp</item>
        <item name="xnpb_unreached_bar_height">3dp</item>
    </style>

    <style name="common_download_progressbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="xnpb_max">100</item>
        <item name="xnpb_current">0</item>
        <item name="xnpb_unreached_color">#CCCCCC</item>
        <item name="xnpb_reached_color">#e94339</item>
        <item name="xnpb_text_size">14sp</item>
        <item name="xnpb_text_color">#e94339</item>
        <item name="xnpb_reached_bar_height">8dp</item>
        <item name="xnpb_unreached_bar_height">6dp</item>
    </style>

    <style name="common_style_menu_active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="common_style_menu_inactive">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
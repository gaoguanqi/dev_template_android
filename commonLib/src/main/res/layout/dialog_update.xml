<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.maple.commonlib.widget.update.UpdateViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/xupdate_bg_app_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_xupdate_bg"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_black"
                android:textSize="16sp"
                android:text="@{viewModel.updateTitle}"
                tools:text="是否升级到1.0.1版本？" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_update_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5dp"
                        android:textColor="#FF666666"
                        android:textSize="14sp"
                        android:text="@{viewModel.updateInfo}"
                        tools:text="1、xxxxxxxx\n2、ooooooooo" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="42dp"
                android:text="升级"
                android:background="@drawable/selector_update_confirm"
                android:textColor="@color/common_white"
                android:onClick="@{(v) -> viewModel.onUpdate()}"
                android:visibility="@{viewModel.updateState? View.VISIBLE : View.GONE}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="42dp"
                android:text="忽略此版本"
                android:textColor="#FF666666"
                android:textSize="14sp"
                android:onClick="@{(v) -> viewModel.onIgnore()}"
                android:visibility="@{viewModel.ignoreState? View.VISIBLE : View.GONE}" />

            <com.xuexiang.xupdate.widget.NumberProgressBar
                android:id="@+id/npb_progress"
                style="@style/common_xupdate_progressbar"
                android:layout_marginBottom="20dp"
                android:visibility="@{viewModel.progressState? View.VISIBLE : View.GONE}" />

        </LinearLayout>
    </LinearLayout>
</layout>